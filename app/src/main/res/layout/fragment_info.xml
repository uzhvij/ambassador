<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login_fragments.InfoFragment">

    <TextView
        android:id="@+id/textViewHeaderOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="hello"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageViewInfo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:src="@mipmap/second_screen_hd" />

    <TextView
        android:id="@+id/textViewHeaderTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:text="TextView" />

    <Button
        android:id="@+id/buttonNextFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Далее" />

</LinearLayout>